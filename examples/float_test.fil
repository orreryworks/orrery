diagram component [background_color="#f8f8f8"];

// Type definitions using float attributes
type FloatDatabase = Rectangle [
    fill_color="lightblue",
    stroke=[width=2.5],
    rounded=8,
    text=[font_size=14.5]
];

type FloatService = Component [
    fill_color="#e6f3ff",
    stroke=[width=1.5],
    text=[font_size=12, padding=6.5]
];

type ThickArrow = Arrow [
    stroke=[color="red", width=3.5]
];

type ThinArrow = Arrow [
    stroke=[color="blue", width=1.2]
];

// Components using float attributes
database as "Primary Database": FloatDatabase;

api_service as "API Service": Rectangle [
    fill_color="#ffe6e6",
    stroke=[width=2],
    rounded=5.5,
    text=[font_size=16, padding=8]
];

cache_service as "Cache Layer": FloatService;

frontend as "Frontend App": Oval [
    fill_color="#f0f8ff",
    stroke=[width=1.8],
    text=[font_size=13.5]
];

// Relations with float attributes
frontend -> [stroke=[width=2.5, color="green"]] api_service: "API Calls";
api_service -> @ThickArrow database: "Queries";
api_service -> @ThinArrow cache_service: "Cache Check";
cache_service -> [stroke=[width=1, color="orange"]] database: "Cache Miss";

// Scientific notation test
monitoring as "Monitoring": Rectangle [
    fill_color="yellow",
    stroke=[width=1e1],
    text=[font_size=1.2e1],
    rounded=5e0
];

api_service -> [stroke=[width=2.5]] monitoring: "Metrics";
